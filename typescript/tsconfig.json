{
    "compilerOptions": {
        "target": "ES5",
        "experimentalDecorators": true,
        "module":"system",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outFile": "./tsc.js"
    },
    "include": [
        "*"
    ],
    "exclude":[
        "node_modules",
        "**/*.spec.ts"
    ]
}